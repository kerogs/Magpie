{
    "name": "Magpie",
    "manifest_version": 2,
    "version": "1.1.2-beta",
    "browser_action": {
        "default_icon": {
            "16": "icons/16.png",
            "32": "icons/32.png",
            "48": "icons/48.png",
            "128": "icons/128.png"
        },
        "default_title": "Magpie",
        "default_popup": "popup.html"
    },
    "permissions": ["activeTab", "storage", "tabs", "scripting"],
    "background": {
        "service_worker": "background.js"
    },
    "icons": {
        "16": "icons/16.png",
        "32": "icons/32.png",
        "48": "icons/48.png",
        "128": "icons/128.png"
    },
    "description": "An open source self-hosted application management platform.",
    "content_security_policy": "script-src 'self'; object-src 'self'",
    "options_page": "options.html"
}